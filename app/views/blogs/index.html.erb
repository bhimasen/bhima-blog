
<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <%= link_to "Create Blog", new_blog_path(), :class=> "btn btn-primary"%>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <ul class="list-group">
        <% @blogs.each do |blog|%>
          <li class="list-group-item"><%= link_to blog.title, blog_path(blog)%></li>
        <% end %>
      </ul>  
    </div>
    <div class="col-sm-6">
    </div>
  </div>
</div>
